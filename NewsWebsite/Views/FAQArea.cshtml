@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.FAqarea>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "SiteMaster.cshtml";
    var allFaqs = Model.Content.FAqitem;
    var i = 0;
}

<div class="container">

    @foreach (var item in allFaqs)
    {

        var id = "collapse" + i;
        var hid = "heading" + i;
        <div id="accordion" role="tablist">
            <div class="card">
                <div class="card-header" role="tab" id="@hid">
                    <h5 class="mb-0">
                        <a data-toggle="collapse" href="#@id" aria-expanded="true" aria-controls="collapseOne">
                            @item.GetPropertyValue("question")  
                        </a>
                    </h5>
                </div>

                <div id="@id" class="collapse" role="tabpanel" aria-labelledby="@hid" data-parent="#accordion">
                    <div class="card-body">
                        @item.GetPropertyValue("answer")
                    </div>
                </div>
            </div>
        </div>
        i++;
    }

</div>